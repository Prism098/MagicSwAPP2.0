<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMOTG.LoginPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login?"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="24" CornerRadius="0">
                <Label Text="MOTG Collectables" HorizontalTextAlignment="Center" TextColor="{StaticResource accent-500}" FontSize="36"/>
            </Frame>
            <Label x:Name="usernameLabel" Text="Pick a username:"/>
            <Entry x:Name="usernameEntry" Placeholder="Username"/>
            <Label x:Name="passwordLabel" Text="Pick a password:"/>
            <Entry x:Name="passwordEntry" Placeholder="Password"/>
            <Button x:Name="loginButton" Text="Login" Clicked="LoginButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>

